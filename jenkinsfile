pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'chmod +x init.sh'
                sh './init.sh'
            }
        }
        stage('Test') {
            steps {
                script {
                    docker exec app python manage.py test
                    def response = sh(script: 'docker run app curl -s -o /dev/null -w "%{http_code}" http://10.208.0.15:8000', returnStatus: true)
                    if (response == 200) {
                        currentBuild.result = 'SUCCESS'
                    } else {
                        currentBuild.result = 'FAILURE'
                    }
                    docker ps -a
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
        success {
            sh 'version=$(git log -n 1 --format="%s" HEAD)'
            sh 'docker push me-west1-docker.pkg.dev/django-project-test-404011/django-yuval/app:1.0.2'
        }
        // failure {
        //     // mail to: yuval006@gmail.com, subject: 'The Pipeline failed :('
        // }
        always {
            sh 'echo build ended, deleting all resources...'
            sh 'chmod +x ./delete.sh'
            sh './delete.sh'
            sh 'rm -rf .'
        }
    }
}
